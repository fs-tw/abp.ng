{
  "$schema": "http://json-schema.org/schema",
  "$id": "Component",
  "title": "",
  "type": "object",
  "properties": {
    "componentType": {
      "type": "string",
      "enum": [
        "basic",
        "tabs",
        "form",
        "tree",
        "entity",
        "modal"
      ],
      "default": "basic",
      "description": "main page or content tab."
    },
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "project": {
      "type": "string",
      "description": "The name of the project.",
      "$default": {
        "$source": "projectName"
      },
      "x-dropdown": "projects"
    },
    "pageWrap": {
      "type": "boolean",
      "default": true,
      "description": "use AbpPage to wrap the content."
    },
    "navStyle": {
      "type": "string",
      "enum": ["nav-tabs", "nav-pills"],
      "default": "nav-tabs"
    }
  },
  "required": ["componentType", "name", "project"]
}
